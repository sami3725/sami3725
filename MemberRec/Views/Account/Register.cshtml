
@{
    ViewBag.Title = "Register";
}

<style>
   .panel{
       margin-top:20px;
       margin:auto;
       width:35rem;
            
    }
   .panel-body{
        background-color:darkslategray;
   }

    body {
        background-image: url('../../Images/register1.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>



<div class="container">
    <div class="panel">
        <div class="panel panel-default text-center">
           
            <div class="panel-heading" style="background-color:teal; color:white;">
                
                <h4>Register Here <i class="glyphicon glyphicon-hand-down"></i> </h4>
            </div>
            <div class="panel-body text-center">
                <form class="form-horizontal">

                    <div class="form-group">
                        <div class="control-label col-md-10">
                            <input type="text" class="form-control" style="margin-top:10px;" id="name" placeholder="Enter Your Name" name="name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-10">
                            <input type="text" class="form-control" id="password" placeholder="Enter your Password" name="password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-10">
                            <input type="text" class="form-control" id="confirmpassword" placeholder="Confirm password" name="name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-10">
                            <button type="submit" class="btn btn-success">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>